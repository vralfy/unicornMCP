{
  "server": {
    "name": "Unicorn MCP Server",
    "version": "1.0.0"
  },
  "port": 3000,
  "path": "/mcp",
  "transportOptions": {
    "enableDnsRebindingProtection": true,
    "allowedHosts": ["localhost", "127.0.0.1"],
    "allowedOrigins": ["http://localhost:3000"]
  },
  "logfile": "mcp.log",
  "enableJsonOutput": false
}