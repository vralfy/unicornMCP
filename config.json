{
  "server": {
    "name": "Unicorn MCP Server",
    "version": "1.0.0"
  },
  "port": 3000,
  "path": "/mcp",
  "transportOptions": {
    "enableDnsRebindingProtection": false,
    "allowedHosts": ["localhost", "127.0.0.1", "localhost:3000"],
    "allowedOrigins": ["http://localhost:3000"]
  },
  "logfile": "mcp.log",
  "enableJsonOutput": false,
  "mods": [
    { "file": "mods/examples.ts", "className": "mcpExamples"},
    { "file": "mods/unicorn.ts", "className": "mcpUnicorn"},
    { "file": "mods/location.ts", "className": "mcpLocation"},
    { "file": "mods/weather.ts", "className": "mcpWeather"},
    { "file": "mods/jira.ts", "className": "mcpJira"},
    { "file": "mods/rss.ts", "className": "mcpRSS"}
  ],
  "rss": {
    "feeds": [
      { "category": "technology", "id": "spiegelnetzwelt", "name": "Spiegel Netzwelt", "url": "https://www.spiegel.de/netzwelt/index.rss"},
      { "category": "technology", "id": "heiseonline", "name": "heise online News", "url": "https://www.heise.de/rss/heise.rdf"},
      { "category": "technology", "id": "golem", "name": "Golem.de", "url": "https://rss.golem.de/rss.php?feed=RSS2.0"},
      { "category": "games", "id": "pixelnostalgie", "name": "Pixel Nostalgie", "url": "https://feeds.feedburner.com/pixelnostalgie"}
    ]
  }
}